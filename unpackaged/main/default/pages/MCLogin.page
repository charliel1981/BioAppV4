<apex:page id="loginPage" controller="MCLoginController" showHeader="false" docType="html-5.0">
  <head>
    <style>
        body {
          background: #F6F6F6 !important;
        }
        .sl-font-size {
          font-size: 18px !important;
        }
        .sl-register-button {
          background: #d71920 !important;
          color: white !important;
          text-decoration: none !important;
          padding: 10px !important;
          font-size: 26px !important;
          -webkit-appearance: none !important;
        }
        .sl-button {
          background: #004054 !important;
          color: white !important;
          font-size: 20px !important;
          padding: 8px !important;
          -webkit-appearance: none !important;
        }
        input[type="text"],
        input[type="email"],
        input[type="password"] {
          font-size: 18px !important;
        }
        .sl-title {
          font-size: 20px !important;
          color: #008b99;
        }
        .sl-logo-header-bg {
          position: absolute;
          height: 65px;
          background-color: #008b99;
          top: 0;
          z-index: -1;
          width: 100%;
        }
        .sl-logo {
          padding-top: 10px;
        }
    </style>
  </head>

  <center class="sl-font-size">
    <div class="sl-logo-header-bg">
    </div>

    <!-- image here -->
    <br/>
    <br/>
    <br/>

    <apex:panelGrid cellpadding="0" cellspacing="0" columns="1">
      <apex:form id="loginForm" forceSSL="true">
        <div style="padding-left: 3px;text-align:center;">
          <!-- <apex:outputLink value="{!$Page.CommunitiesSelfRegMC}" styleClass="btn sl-register-button" rendered="{!$Site.RegistrationEnabled}">Register</apex:outputLink> -->
          <apex:commandButton action="{!selfReg}" value="Register" styleClass="sl-register-button" id="selfRegButton"/>
        </div>
        <br/>
        <br/>
        <apex:pageMessages id="error"/>
        <div style="padding-left: 3px;">
          <apex:outputText styleClass="sl-title" value="Sign In"/>
        </div>
        <apex:outputPanel layout="block">
          <apex:panelGrid columns="1" style="margin-top:1em;">
            <apex:outputLabel value="Email" for="username"/>
            <apex:input type="email" id="username" value="{!username}"/>
            <apex:outputLabel value="{!$Label.site.password}" for="password"/>
            <apex:inputSecret id="password" value="{!password}"/>
            <apex:outputText value=""/>
            <apex:commandButton action="{!login}" value="{!$Label.site.login_button}" styleClass="sl-button" id="loginButton"/>
            <br/>
            <apex:panelGroup id="theLinks">
              <apex:commandLink action="{!forgotPassword}" immediate="true" value="Forgot your password?" />
            </apex:panelGroup>
          </apex:panelGrid>
        </apex:outputPanel>
      </apex:form>
    </apex:panelGrid>

  </center>
</apex:page>