  <script type="text/javascript">
    var vi = {
      // handles apex function running
      runApex: function(action, value1, value2) {
        return new Promise(function(success) {
          if (value1 && value2) {
            Visualforce.remoting.Manager.invokeAction(action, value1, value2, function(res, event) {
              if (event.status) {
                success(res);
              } else {
                console.error(event);
              }
            });
          } else if (value1 && !value2) {
            Visualforce.remoting.Manager.invokeAction(action, value1, function(res, event) {
              if (event.status) {
                success(res);
              } else {
                console.error(event);
              }
            });
          } else if (!value1 && !value2) {
            Visualforce.remoting.Manager.invokeAction(action, function(res, event) {
              if (event.status) {
                success(res);
              } else {
                console.error(event);
              }
            });
          }
        })
      },
      getData: function() {
        var $View = "{!TEXT($User.Community_View__c)}";
        return new Promise(function(success) {
        
          var education = 0;
        
          vi.runApex('{!$RemoteAction.CommunityController.getCommunityItemRecords}', 'Continuing Education', '1').then(function(ce) {
            education = ce.length;         
          });

          if ($View.indexOf('Surgeon') != -1) {

            vi.runApex('{!$RemoteAction.CommunityController.getCommunityItemRecords}', 'Topic of Interest / Notices', '3').then(function(topics) {
              console.log('Topic of Interest / Notices', topics);
              vi.runApex('{!$RemoteAction.CommunityController.getCommunityItemRecords}', 'Surgeon', '10').then(function(surgeon) {
                console.log('Consultation Documents', surgeon);
                surgeon = surgeon.sort(function(a, b) { return a.sortNumber - b.sortNumber; });
                vi.runApex('{!$RemoteAction.CommunityController.getLogoURLForUser}').then(function(url) {
                  // decode banner uri
                  var decode = url.replace(/amp;/g, '').replace(/"/g, '');
                  // get color codes
                  vi.runApex('{!$RemoteAction.CommunityController.getColorCodes}').then(function(colors) {
                    console.log(colors);
                    // check if we can see interna;
                    var test1 = 'Internal only';
                    vi.runApex('{!$RemoteAction.CommunityController.checkCommunityItemExists}', test1).then(function(test1res) {
                      var test2 = 'Publication Library';
                      vi.runApex('{!$RemoteAction.CommunityController.checkCommunityItemExists}', test2).then(function(test2res) {
                      var results = {
                        page: 'home',
                        topics: topics,
                        image: decode,
                        colors: colors,
                        internal: test1res,
                        pub: test2res,
                        featured: surgeon,
                        profile: "{!$Profile.Name}",
                        name: "{!$User.FirstName}",
                        view: "Surgeon"
                      }
                      if (education > 0) {
                        document.getElementById('continuing_education').style.display = 'block';
                        document.getElementById('ce-linka').style.display = 'block';
                        document.getElementById('ce-linkb').style.display = 'block';
                      }
 
                      success(results);
                      });
                    });
                  });
                });
              })
            })

          } else {
              // get topics
            vi.runApex('{!$RemoteAction.CommunityController.getCommunityItemRecords}', 'Topic of Interest / Notices', '3').then(function(topics) {
              console.log('Topic of Interest / Notices', topics);
              // get first video
              vi.runApex('{!$RemoteAction.CommunityController.getCommunityItemRecords}', 'Video box', '1').then(function(videos) {
                // get first e learning
                console.log('Video box', videos)
                vi.runApex('{!$RemoteAction.CommunityController.getCommunityItemRecords}', 'Brainshark training', '1').then(function(learning) {
                  console.log('Brainshark training', learning);
                  // get featured
                  vi.runApex('{!$RemoteAction.CommunityController.getCommunityItemRecords}', 'Featured Item', '1').then(function(featured) {
                    console.log('Featured Item', featured);
                    // get banner
                    vi.runApex('{!$RemoteAction.CommunityController.getLogoURLForUser}').then(function(url) {
                      // decode banner uri
                      var decode = url.replace(/amp;/g, '').replace(/"/g, '');
                      // get color codes
                      vi.runApex('{!$RemoteAction.CommunityController.getColorCodes}').then(function(colors) {
                        // check if we can see interna;
                        var test1 = 'Internal only';
                        vi.runApex('{!$RemoteAction.CommunityController.checkCommunityItemExists}', test1).then(function(test1res) {
                          var test2 = 'Publication Library';
                          vi.runApex('{!$RemoteAction.CommunityController.checkCommunityItemExists}', test2).then(function(test2res) {
                          
                          var results = {
                            page: 'home',
                            topics: topics,
                            image: decode,
                            colors: colors,
                            internal: test1res,
                            pub: test2res,
                            featured: featured,
                            videos: videos,
                            learning: learning,
                            profile: "{!$Profile.Name}",
                            name: "{!$User.FirstName}",
                            view: "{!TEXT($User.Community_View__c)}"
                          }
                      if (education > 0) {
                        document.getElementById('continuing_education').style.display = 'block';
                        document.getElementById('ce-linka').style.display = 'block';
                        document.getElementById('ce-linkb').style.display = 'block';
                      }
                          success(results);
                          });
                        });
                      });
                    });
                  });
                });
              });
            });
          }

        });
      },
